
@{
    ViewBag.Title = "AddNewFood";
    Layout = "~/Areas/FOAdmin/Views/Shared/alayout.cshtml";
}
<script src="~/Areas/FOAdmin/js/customjs.js"></script>
<h3>AddNew Food</h3>
<hr />
<div class="panel-body" style="display:none">
    <div class="alert alert-warning" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <span id="msg">@ViewBag.msg</span>
    </div>
</div>


@{if (ViewBag.status == 1)
    {
        <div class="panel-body">
            <div class="alert alert-info" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Success! </strong> @ViewBag.msg
            </div>
        </div>
    }
    if (ViewBag.status == 0)
    {
        <div class="panel-body">
            <div class="alert alert-info" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Error! </strong> @ViewBag.msg
            </div>
        </div>
    }
}
<div class="xs">
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("AddNewFood", "ManageFood", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <label>Select Category : </label>
                    @Html.DropDownList("drpCategory", ViewBag.drpCategory as SelectList, "Select Category", new { @class = "form-control1 control3" })
                    <label>Select SubCategory : </label>
                    <select id="drpSubCategory" name="drpSubCategory" class="form-control1 control3"></select>
                    
                    <label>Enter Food Name : </label>
                    <input type="text" id="txtfoodname" name="fname" class="form-control1 control3" />
                    <label>Enter Food Price : </label>
                    <input type="number" id="txtprice" name="price" class="form-control1 control3" />
                    <label>Description :  </label>
                    <textarea rows="6" id="txtddesc" name="fdesc" class="form-control1 control2"></textarea>
                    <label>Food Photo :  </label>
                    <input type="file" name="pic" id="fimg" class="form-control1 control3" />
                    <hr />
                    <input type="submit" name="btn" id="btnSave" value="Add Food" class="btn btn-warning btn-warng1" />
                    <input type="reset" id="btnCancel" value="Cancel" class="btn btn-default btn-warng1" />
                }
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
